<?xml version="1.0" encoding="utf-8"?>
<org.nativescript.mason.masonkit.View xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:mason="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ScrollActivity">


  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.nativescript.mason.masonkit.View
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      mason:mason_alignContent="stretch"
      mason:mason_alignItems="center"
      mason:mason_flexDirection="column"
      mason:mason_flexGrow="1"
      mason:mason_justifyContent="start">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First" />


    </org.nativescript.mason.masonkit.View>

  </ScrollView>


</org.nativescript.mason.masonkit.View>
