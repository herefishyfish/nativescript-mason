      android:id="@+id/boxA"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is box A." />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="align-self: stretch" />
    </org.nativescript.mason.masonkit.View>

    <org.nativescript.mason.masonkit.View
      android:id="@+id/boxB"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
