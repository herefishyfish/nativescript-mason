<?xml version="1.0" encoding="utf-8"?>
<org.nativescript.mason.masonkit.View
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mason="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AbsoluteActivity">

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Test"/>


  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Top Left"
    mason:mason_position="absolute"
    mason:mason_insetTop="0dp"
    mason:mason_insetLeft="0dp"
    android:background="@color/blue"
    android:textColor="@color/white"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Top Right"
    mason:mason_position="absolute"
    mason:mason_insetRight="0dp"
    mason:mason_insetTop="0dp"
    android:background="@color/blue"
    android:textColor="@color/white"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bottom Left"
    mason:mason_position="absolute"
    mason:mason_insetLeft="0dp"
    mason:mason_insetBottom="0dp"
    android:background="@color/blue"
    android:textColor="@color/white"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bottom Right"
    mason:mason_position="absolute"
    mason:mason_insetRight="0dp"
    mason:mason_insetBottom="0dp"
    android:background="@color/blue"
    android:textColor="@color/white"
    />

</org.nativescript.mason.masonkit.View>
